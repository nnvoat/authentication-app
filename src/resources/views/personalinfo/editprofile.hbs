{{> personalinfopartials/headerprofile}}

<div class="row justify-content-center">
  <div class="col-7 mt-4 p-0">
    <a href="/profile"><span>&lt;</span> Back</a>
  </div>
  <div class="col-7 mt-4 card p-4">
    <form>
      <div class="d-flex flex-column">
        <h4>Change info</h4>
        <div class="text-secondary">Changes will be reflected to every services</div>
        <div class="row align-items-center my-4">
          <div class="col-2">
            <img src="https://img.freepik.com/free-vector/young-man-playing-guitar_18591-77208.jpg?size=626&ext=jpg&ga=GA1.2.1388420341.1689589701&semt=sph" class="user-profile" alt="user-profile" />
          </div>
          <div class="text-secondary">CHANGE PHOTO</div>
        </div>
      </div>
      <div class="form-group">
        <label for="name">Name</label>
        <input
          type="text"
          class="form-control col-6"
          id="name"
          placeholder="Enter your name..."
        />
      </div>
      <div class="form-group">
        <label for="bio">Bio</label>
        <textarea
          class="form-control col-6"
          id="bio"
          rows="3"
          placeholder="Enter your bio..."
        ></textarea>
      </div>
      <div class="form-group">
        <label for="phone">Phone</label>
        <input
          type="text"
          class="form-control col-6"
          id="phone"
          placeholder="Enter your phone..."
        />
      </div>
      <div class="form-group">
        <label for="email">Email</label>
        <input
          type="email"
          class="form-control col-6"
          id="email"
          placeholder="Enter your email..."
        />
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input
          type="password"
          class="form-control col-6"
          id="password"
          placeholder="Enter your password..."
        />
      </div>
      <div>
        <button class="btn btn-primary">Save</button>
      </div>
    </form>
  </div>

  <div class="d-flex justify-content-between mt-2 col-7 p-0">
    <div class="d-flex">
      <p>created by</p>
      <p class="ml-1 font-weight-bold"><u>anhtuan</u></p>
    </div>
    <div>
      <p>devchallenges.io</p>
    </div>
  </div>
</div>